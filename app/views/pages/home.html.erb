<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <!-- Background images -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="carousel-image mt-0" style="background-image: linear-gradient(rgba(1,1,1,0.6),rgba(1,1,1,0.6)), url(<%= asset_path("carousel/steak.jpg") %>)"></div>
    </div>
    <div class="carousel-item">
      <div class="carousel-image mt-0" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= asset_path("carousel/chicken-wings.jpg") %>)"></div>
    </div>
    <div class="carousel-item">
      <div class="carousel-image mt-0" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= asset_path("carousel/satay.jpg") %>)"></div>
    </div>
  </div>
  <!-- Introductory text -->
  <div class="intro-container">
    <div class="introductory-text">
      <h1>Find the best meats on the island</h1>
      <p>The Meat Repo is an online marketplace for finding and selling meats in Singapore</p>
      <%= link_to "Shop now", products_path, class: "btn btn-short-gold mb-3 ms-0" %>
    </div>

    <% unless user_signed_in? %>
      <div class="user-actions">
        <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-success" %>
        <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-light" %>
      </div>
    <% end %>
  </div>
</div>

<!-- 6 product cards -->
<div class="container mb-5">
  <div class="row my-5">
    <div class="col-12 text-center">
      <h2><strong>Products</strong></h2>
    </div>
  </div>

  <div class="row">
    <% 6.times do |i| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card bg-white rounded">
          <!-- Image -->
          <div class="product-image-container">
            <%= link_to product_path(@products[i].id), class: "text-decoration-none" do %>
              <img src="https://source.unsplash.com/random/388x235" class="product-card-image" alt="product image">
              <div class="overlay">
                <div class="view-product-text">View</div>
              </div>
            <% end %>
          </div>

          <!-- Product info -->
          <div class="d-flex flex-column p-4">
            <div>
              <p class="product-card-name"><strong><%= @products[i].name %></strong></p>
              <p><em>Expiration date:</em> <%= @products[i].expiration_date %></p>
              <p><em>Country of origin:</em> <%= @products[i].country %></p>
            </div>

            <div class="d-flex flex-row justify-content-between">
              <p><strong><%= @products[i].butchery.name %></strong></p>
              <p><strong>S$<%= @products[i].price %></strong></p>
            </div>

            <div class="d-flex justify-content-center">
              <%= link_to "Order now", new_product_order_path(@products[i].id), class: "btn btn-long-black" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-end">
    <%= link_to "See all", products_path, class: "btn btn-dark" %>
  </div>
</div>
