<div class="row">
  <div class="form-container col-6 d-flex flex-column justify-content-center align-items-center p-5">
    <div class="form-header mb-3 text-center">
      <strong><h1 style="font-weight: 600">Order form for <u style="font-weight: 700"><%= @product.name %></u></h1></strong>
    </div>

    <div class="form-contents">
      <%= simple_form_for([@product, @order]) do |f| %>
        <%= f.input :quantity, wrapper_html: { class: "d-flex justify-content-between"}, input_html: { class:'mx-3 '}%>
        <%= f.submit "Submit", class: "btn btn-medium-black w-100 mt-3" %>
      <% end %>
    </div>
  </div>

  <div class="col-6">
    <div class="image-container">
      <img src="https://images.unsplash.com/photo-1502333052765-1424f32cf5ca?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=741&ixid=MnwxfDB8MXxyYW5kb218MHx8cmF3LG1lYXR8fHx8fHwxNjU0NDM4NzEy&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=494" alt="cat">
    </div>
  </div>
</div>
