<div class="container">
  <div class="d-flex justify-content-center my-3">
    <div class="container justify-content-center my-3">
      <div class="row">
        <h1><strong><%= @butchery.name %></strong></h1>
      </div>

      <div class="row">
        <div class="col-6">
          <h2>All Products</h2>
        </div>

        <div class="col-3"></div>

        <div class="col-3">
          <%= link_to "Add product", new_user_butchery_product_path(@user, @butcher), class: "btn btn-success" %>
        </div>
      </div>

    </div>

    </div>
</div>

<div class="container mb-5">

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card bg-white rounded p-4">
          <p><strong><%= product.name %></strong></p>
          <p><%= product.expiration_date %></p>
          <p>$<%= product.price %></p>
          <p><%= product.country %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
