<div class="container">
  <div class="d-flex justify-content-center my-3">
    <h1><strong>All Products</strong></h1>
  </div>
</div>

<div class="container mb-5">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card bg-white rounded">
          <img src="https://source.unsplash.com/random/388x235" alt="product image">
          <div class="d-flex flex-column p-4">
            <div>
              <p class="product-card-name"><strong><%= product.name %></strong></p>
              <p><em>Expiration date:</em> <%= product.expiration_date %></p>
              <p><em>Country of origin:</em> <%= product.country %></p>
            </div>

            <div class="d-flex flex-row justify-content-between">
              <p><strong><%= product.butchery.name %></strong></p>
              <p><strong>S$<%= product.price %></strong></p>
            </div>

            <div class="d-flex justify-content-center">
              <%= link_to "Add to cart", '#', class: "btn btn-dark w-100 add-to-cart-btn" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
