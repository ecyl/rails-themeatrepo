
<div class="row">
  <div class="form-container col-6 d-flex justify-content-center align-items-center flex-column">
    <div class="form-header mb-3">
      <strong><h1>Create a product</h1></strong>
    </div>

    <div class="form-contents">
      <%= simple_form_for([@user, @butchery, @product]) do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :country %>
        <%= f.input :expiration_date, as: :date, html5: true%>
        <%= f.input :discount_percentage%>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Submit", class: "btn btn-primary"%>
      <% end %>

    </div>
  </div>

  <div class="col-6">
    <div class="image-container">
      <img src="https://images.unsplash.com/photo-1502333052765-1424f32cf5ca?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=741&ixid=MnwxfDB8MXxyYW5kb218MHx8cmF3LG1lYXR8fHx8fHwxNjU0NDM4NzEy&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=494" alt="cat">
    </div>
  </div>
</div>
