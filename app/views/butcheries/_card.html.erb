   <div class="col-12 col-sm-6 col-md-3 mb-4">
        <div class="card bg-white rounded">
          <!-- Image -->
          <div class="product-image-container">
            <%= link_to '#', class: "text-decoration-none text-dark" do %>
              <img src="https://source.unsplash.com/random/388x235" class="product-card-image" alt="product image">
          </div>

          <!-- Product info -->
          <div class="d-flex flex-column p-4">
            <div>
              <p class="product-card-name"><strong><%= product_name %></strong></p>
              <p><em>Expiration date:</em> <%= exp_date %></p>
              <p><em>Country of origin:</em> <%= country %></p>
            </div>
            <div class="d-flex flex-row justify-content-between">
              <p><strong>S$<%= price %></strong></p>
            </div>
            <div class="d-flex justify-content-center">
              <%= link_to "Add to cart", '#', class: "btn btn-dark w-100 add-to-cart-btn" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
