<div id="card-txtboard" class="d-flex flex-column p-2">
  <div>
    <p class="product-card-name"><strong><%= product_name %></strong></p>
    <p>
      <em>Expiration date:</em> <%= exp_date %>
      <span><i class="fa-solid fa-triangle-exclamation" style="color: #FB0011;"></i></span>
    </p>
    <p><em>Country of origin:</em> <%= country %></p>
  </div>
  <div class="d-flex flex-row justify-content-between ">
    <p>
      <s>S$<%= price %></s>
      <span><i class="fa-solid fa-tag" style="color: #F3A326;"></i> <strong>S$<%= discounted_price %></strong></span>
    </p>
  </div>
</div>
