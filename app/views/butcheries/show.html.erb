

<div class="banner-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <div class='text-center'>
      <p><%= @butcher.name %></p>
      <div class="mt-3">
        <p class="mb-0" style="font-weight: lighter; font-size: 80%"><strong>Address: </strong><%= @butcher.address %></p>
        <p class="mb-0" style="font-weight: lighter; font-size: 80%"><strong>Contact No: </strong><%= @butcher.phone_number %></p>
      </div>
    </div>
</div>


    <div class="d-flex justify-content-end mb-3">
      <%= link_to 'Add product', new_user_butchery_product_path(@user, @butcher), class: "btn btn-outline-success" %>
    </div>
<div class="container mb-5 p-0">
  <div class="row">
    <% @butcher.products.each do |product| %>
      <%= render "card", product_name: product.name, exp_date: product.expiration_date, country: product.country, price: product.price  %>
    <% end %>
  </div>
</div>



